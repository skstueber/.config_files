# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
# old defaults without a max:
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pulsemixer --unmute --change-volume +5 --max-volume 100 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pulsemixer --unmute --change-volume -5 --max-volume 100 #decrease sound volume

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pulsemixer --unmute --change-volume +5 --max-volume 150 #increase sound volume
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pulsemixer --unmute --change-volume -5 --max-volume 150 #decrease sound volume

bindsym XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute && $refresh_i3status

